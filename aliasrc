alias vi='vim'
alias screen-start='screen -d -R -c $HOME/.screenrc -S $1'
alias :e='vim'
alias :q='exit'
alias :w='sync'
alias grep='grep --color=auto'
alias grep='grep -E'
alias ack='ack-grep'
alias gist='gist -c -p'

PLATFORM=$(uname)

if [[ "$PLATFORM" == "Darwin" ]]; then
    alias ls='ls -G'
else
    alias ls='ls --color=auto'
fi

alias ll='ls -l -h'
